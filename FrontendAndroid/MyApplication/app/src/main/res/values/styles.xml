<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="FullWidthEditText" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
        <item name="colorControlNormal">#FFF</item>
        <item name="colorControlActivated">#FFF</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textColorHint">#FFF</item>
    </style>


    <style name="FullWidthEditSettings" parent="Widget.AppCompat.EditText">
        <item name="android:padding">20dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/abc_text_size_subhead_material</item>
        <item name="colorControlNormal">#1da8ff</item>
        <item name="colorControlActivated">#1da8ff</item>
        <item name="android:textColor">#1da8ff</item>
        <item name="android:textColorHint">#1da8ff</item>
    </style>
    <style name="MyButton" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#FFF</item>
    </style>
    <style name="MyButtonSettings" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">#1da8ff</item>
    </style>
    <style name="MyHintText" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFF</item>
    </style>
    <style name="MyHintSettings" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#1da8ff</item>
    </style>


    <style name="ToolbarTextAppearance">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">?colorAccent</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>


    <style name="MyToolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">#1da8ff</item>
        <item name="android:elevation">4dp</item>
    </style>




</resources>
